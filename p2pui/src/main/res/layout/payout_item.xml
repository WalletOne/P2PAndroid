<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/payout_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="9dp"
        android:layout_toLeftOf="@+id/payout_amount"
        android:layout_toStartOf="@+id/payout_amount"
        android:textSize="16sp"
        android:textColor="#DE000000"
        android:maxLines="1"
        tools:text="Успешная выплата" />

    <TextView
        android:id="@+id/payout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payout_state"
        android:layout_toLeftOf="@+id/payout_amount"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="9dp"
        android:textSize="14sp"
        tools:text="Aug 3, 2017" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/payout_amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="16sp"
        tools:text="$100000" />

</RelativeLayout>